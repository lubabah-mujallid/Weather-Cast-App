<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sundown"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvCityCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City, Country"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="40sp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <TextView
            android:textColor="@color/white"

            android:id="@+id/tvUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="last updated: "
            android:layout_marginBottom="50dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tvState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="state"
            android:textSize="24sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tvTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="temp"
            android:textSize="60sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="low"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="high"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="130dp"
            android:layout_height="110dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:background="#3CF1EBF1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imSunrise"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_sunrise"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/tvSunrise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Sunrise \n Data"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:background="#3CF1EBF1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imSunset"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_sunset"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/tvSunset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Sunset \n Data"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#3CF1EBF1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imWind"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_wind"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/tvWind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Wind \n Data"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:background="#3CF1EBF1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imPressure"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/pressure"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/tvPressure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Pressure \n Data"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:background="#3CF1EBF1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imHumidity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/drops"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/tvHumidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Humidity \n Data"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/llRefresh"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#3CF1EBF1"
                android:gravity="center"
                android:clickable="true"
                android:orientation="vertical"
                android:focusable="true">

                <ImageView
                    android:id="@+id/imRefresh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_baseline_refresh_24"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/tvRefresh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Refresh \n Data"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>